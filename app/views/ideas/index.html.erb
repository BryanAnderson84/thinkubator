<h1>All Ideas</h1>

<% if @ideas.any? %>

  <h4><ul style="list-style: none;">
    <% @ideas.each do |idea| %>
      <li>-
        <%= link_to idea.title, idea_path(idea) %>
      </li>
    <% end %>
  </ul></h4>
  <% else %>
    <p>There are no current Ideas!</p>
<% end %>
<h5 class="btn-large"> <%= link_to "Add New Idea", new_idea_path %> </h5>
