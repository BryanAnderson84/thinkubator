<%= form_for [@idea, @suggestion] do |f| %>
<br>
  <%= f.label :content, "Enter suggestion" %>
  <%= f.text_field :content %>
<br>
  <%= f.label :contribute %>
  <%= f.check_box :contribute, default: true %>
  <%= f.hidden_field :user_id, value: current_user.id %>
<br>
  <%= f.submit "Submit", class: "btn-large" %>
<%end%>
