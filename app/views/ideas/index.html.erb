<h2>All Ideas</h2>

<% if @ideas.any? %>

  <h4><ul style="list-style: none;">
    <% @ideas.each do |idea| %>
      <li>-
        <%= link_to idea.title, idea_path(idea) %>
      </li>
    <% end %>
  </ul></h4>
  <% else %>
    <p>There are no current Ideas!</p>
<% end %>
<%= link_to "Add New Idea", new_idea_path, class: 'btn-large' %>
