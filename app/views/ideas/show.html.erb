<h2> <%= @idea.title %> </h2>
<p> <strong> By: <%= @idea.user.first_name %> <%= @idea.user.last_name %> </strong> </p>
<h4> <%= @idea.description %> </h4>

<h5> <ul style="list-style: none;"> Suggestions: </h5>
      <% @idea.suggestions.each do |suggestion| %>
          <li> By: <%= suggestion.user.first_name %> Created: <%= suggestion.created_at %>
            <%= link_to suggestion.content, idea_suggestion_path(@idea, suggestion) %>
          </li>
        <% end %>
      </ul></h4>

<h5> <%= link_to 'Add Suggestion', new_idea_suggestion_path(@idea) %> </h5>
<h5> <% if current_user == @idea.user %>
     <%= link_to 'Create Assignment', new_idea_assignment_path(@idea) %> |
     <%= link_to 'Edit Idea', edit_idea_path(@idea) %>
     <% end %> </h5>
